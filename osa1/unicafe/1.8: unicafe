import { useState } from 'react'

const Header = ({ text }) => <h1>{text}</h1>

const Button = ({ handleClick, text }) => (
  <button onClick={handleClick}>
    {text}
  </button>
)

const Statistics = ({ stats }) => {
  return (
    <table>
      <tbody>
        <Statistic stat={stats.good} />
        <Statistic stat={stats.neutral} />
        <Statistic stat={stats.bad} />
        <Statistic stat={stats.total} />
        <Statistic stat={stats.average} />
        <Statistic stat={stats.positive} />
      </tbody>
    </table>
  )
}

const Statistic = ({ stat }) => {
  return (
    <tr>
      <td>{stat.text}</td>
      <td>{stat.value}</td>
    </tr>
  )
}

const App = () => {
  const pageHeader = 'Give feedback'
  const statisticsHeader = 'Statistics'
  const [good, setGood] = useState(0)
  const [neutral, setNeutral] = useState(0)
  const [bad, setBad] = useState(0)
  const [total, setTotal] = useState(0)
  const [average, setAverage] = useState(0)

  const stats = {
    good: {
      text: 'Good',
      value: good,
    },
    neutral: {
      text: 'Neutral',
      value: neutral,
    },
    bad: {
      text: 'Bad',
      value: bad,
    },
    total: {
      text: 'Total',
      value: total,
    },
    average: {
      text: 'Average',
      value: total == 0 ? 0 : average / total,
    },
    positive: {
      text: 'Positive',
      value: total == 0 ? 0: (good * 100) / total + ' %'
    }
  }



  const goodButton = () => {
    const updatedGood = good + 1
    setGood(updatedGood)
    setTotal(updatedGood + neutral + bad)
    setAverage(average + 1)
  }

  const neutralButton = () => {
    const updatedNeutral = neutral + 1
    setNeutral(updatedNeutral)
    setTotal(good + updatedNeutral + bad)
  }

  const badButton = () => {
    const updatedBad = bad + 1
    setBad(updatedBad)
    setTotal(good + neutral + updatedBad)
    setAverage(average - 1)
  }

  return (
    <>
      <Header text={pageHeader} />
      <Button handleClick={goodButton} text='good' />
      <Button handleClick={neutralButton} text='neutral' />
      <Button handleClick={badButton} text='bad' />
      <Header text={statisticsHeader} />
      <Statistics stats={stats} />
    </>
  )
}

export default App
